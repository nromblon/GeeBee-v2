<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geebeelicious.geebeelicious">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.HearingCalibrationActivity"
            android:label="@string/title_activity_hearing_calibration"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.ConsultationActivity"
            android:label="@string/title_activity_consultation"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.MonitoringConsultationChoice"
            android:label="@string/title_activity_monitoring_consultation_choice"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.PatientListActivity"
            android:label="@string/title_activity_patient_list"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.AddPatientActivity"
            android:label="@string/title_activity_add_patient"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activities.MonitoringMainActivity"
            android:label="@string/title_activity_monitoring"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest><!--
