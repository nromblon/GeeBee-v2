<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/DefaultBackground"
    tools:context="com.geebeelicious.geebeelicious.fragments.PatientPictureFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/relativeLayoutPhoto"
        android:layout_above="@+id/linearLayoutYesNo">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imagePlaceholder"
            android:layout_centerInParent="true"
            android:src="@drawable/patient_picture_placeholder" />

    </RelativeLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutYesNo"
        android:weightSum="1"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/takePicture"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/takePictureButton"
            android:minWidth="250dp"
            android:layout_weight="0.50"
            style="@style/TestButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/skip"
            android:id="@+id/skipButton"
            android:minWidth="250dp"
            android:layout_weight="0.50"
            style="@style/TestButton" />

    </LinearLayout>
</RelativeLayout>
